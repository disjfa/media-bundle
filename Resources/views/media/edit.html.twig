{% extends "admin.html.twig" %}

{% trans_default_domain 'disjfa-media' %}

{% block page_title_text %}
    {{ 'page_title.edit' | trans({'%media%': media.name}) }}
{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-12 col-md-7 py-3">
                {{ form_start(form, {attr: {class: 'js-media-form', 'data-csrf-token': csrf_token('media') }}) }}
                {{ form_rest(form) }}
                <button type="submit" class="btn btn-primary">
                    <i class="fa fa-save"></i>
                    save
                </button>
                {{ form_end(form) }}
            </div>
            <div class="col-12 col-md-5 bg-light py-3">
                <img src="{{ media.url }}" alt="{{ media.name }}" class="img-thumbnail">
            </div>
        </div>
    </div>
{% endblock %}
